# EditorConfig is awesome: https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[*.{ms,mustache}]
insert_final_newline = false

[*.{scss,css,js,jsx,ts,tsx,astro,html}]
indent_size = 4

[config/**/*.{js,jsx}]
indent_size = 2