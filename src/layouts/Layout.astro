---
import type { Props as MetaProps } from '~/components/Meta.astro';
import Meta from '~/components/Meta.astro';

export interface Props {
    props?: MetaProps;
}

const { props } = Astro.props;
---

<!doctype html>
<html lang={Astro.currentLocale}>
	<head>
        <Meta {...props} />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
